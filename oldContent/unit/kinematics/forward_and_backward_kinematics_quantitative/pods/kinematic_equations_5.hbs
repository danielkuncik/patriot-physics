<script>
  function getDirection(vector_quantity) {
    let direction;
    if (vector_quantity > 0) {
      direction = 'right';
    } else if (vector_quantity < 0) {
      direction = 'left';
    }
    return direction
  }


  function makeRandomProblem() {
    let initial_velocity = randInt(-10,10);
    let acceleration = randInt(-3,3);
    let time = randInt(1,10);
    return solveProblem(initial_velocity, acceleration, time);
  }

  function solveProblem(initial_velocity, acceleration, time) {
    let initial_direction = getDirection(initial_velocity);
    let acceleration_direction = getDirection(acceleration);

    let text = `An object has an initial speed of ${Math.abs(initial_velocity)} m/s
    to the ${initial_direction} and an acceleration of
    ${Math.abs(acceleration)} m/s to the ${acceleration_direction}.
    A time of ${time} seconds passes.
    First, define a positive and negative direction
    on the axis and determine the final velocity of the object.
    Then, answer the questions below.`;
    let final_velocity = initial_velocity + acceleration * time;
    let final_speed = Math.abs(final_velocity);
    let final_direction = getDirection(final_velocity);
    let answer3, speedingUp;
    if (acceleration * final_velocity > 0) {
      speedingUp = true;
      answer3 = 'Speeding up, because velocity and acceleration are in the same direction';
    } else if (acceleration * final_velocity < 0) {
      speedingUp = false;
      answer3 = 'Slowing down, because velocity and acceleration are in opposite directions';
    }
    return {
      text: text,
      answer1: final_speed,
      answer2: final_direction,
      answer3_boolean: speedingUp,
      answer3_text: answer3
    }
  }

