<!DOCTYPE html>
<html lang = "en">
<head>
    {{>metaTags}}
    <title>{{title}}</title>
    {{>commonStyleSheets}}
</head>
<body class = 'bg-light'>
{{>commonJavascriptAssets}}
<header>
    {{>header}}
</header>
<h3>
    {{unitNumber}}-{{letter}}: {{title}}
</h3>
<ul>
    <li>
        Topic Cluster: {{unitClusterName}}
    </li>
    <li>
        Topic: {{unitName}}
    </li>
    <li>
        Objective: {{objective}}
    </li>
    <li>
        Content: {{content}}
    </li>
    <li>
        Level: {{level}}
    </li>
</ul>
<div class = 'no-print'>
    <h4>
        <a href = '{{backLink}}'>BACK to Topic {{unitName}}</a>
    </h4>
</div>
<div class = 'display-2 text-danger'>{{flash}}</div>
<div class = 'jumbotron'>
    <div class = 'container'>
        <div class = 'row'>
            <div class = 'col-md-6 border border-dark' style = 'font-size: 30px'>
                {{practiceLink loggedIn practiceRequirementObject uuid}}
            </div>
            <div class = 'col-md-6 border border-dark' style = 'font-size: 30px'>
                {{quizLinkNew loggedIn quizRequirementObject uuid}}
            </div>
        </div>
        {{#if notLoggedIn}}
            <div class = 'row'>
                <div class = 'col-6'>
                    <h5><a href = '/login'>Login Here</a></h5>
                </div>
            </div>
        {{/if}}
    </div>
</div>

<script>
    const letter = '{{letter}}';
</script>
<div>
    {{showPreviousQuizAttempts previousAttempts}}
</div>

<div class = 'jumbotron text-center'>
    <h1 class = 'display-1'>
        Practice Page
    </h1>
    <h2>
        <span class = 'display-1'>Not </span>
        <span class = 'display-2'>the </span>
        <span class = 'display-3'>quiz</span>
    </h2>
</div>
<div>
    {{{body}}}
</div>
<div class = 'no-print'>
    <h4>
        <a href = '{{backLink}}'>BACK to Topic {{unitName}}</a>
    </h4>
</div>

<div class = 'jumbotron'>
    <div class = 'container'>
        <div class = 'row'>
            <div class = 'col-md-6 border border-dark' style = 'font-size: 30px'>
                {{practiceLink loggedIn practiceRequirementObject uuid}}
            </div>
            <div class = 'col-md-6 border border-dark' style = 'font-size: 30px'>
                {{quizLinkNew loggedIn quizRequirementObject uuid}}
            </div>
        </div>
        {{#if notLoggedIn}}
            <div class = 'row'>
                <div class = 'col-6'>
                    <h5><a href = '/login'>Login Here</a></h5>
                </div>
            </div>
        {{/if}}
    </div>
</div>


<footer>
    {{>footer}}
</footer>
</body>
</html>
