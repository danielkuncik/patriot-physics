<script>
  function createFreeBodyDiagramTable(name, numForces, extraQuestion) {
    let container = $("<div class = 'container'></div>");
    let titleRow = $(`<div class = 'row'><div class = 'col-12'><strong>Free-Body Diagram of ${name}</strong></div></div>`);
