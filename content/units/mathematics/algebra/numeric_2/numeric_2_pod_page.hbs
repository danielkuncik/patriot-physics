
<div id = 'putQuestionsHere'>
    <h3>
        Problems
    </h3>
    <p class = 'directions'>
        In each problem, solve for \( x \).
        If the answer is a decimal, please round to two decimal places.
    </p>
</div>
<div class = 'container'>
    <h3>
        Answers
    </h3>
    <button class = 'btn btn-info' data-toggle = "collapse" data-target = "#putAnswersHere">Show Answers</button>
    <div id = 'putAnswersHere' class = 'collapse'>
    </div>
</div>


<script>
    var myProblems = new writtenProblemList();
    $.getJSON( '{{assetPath}}' + 'numeric_2_problems.json',(data)=>{
        console.log(data);
        data.problems.forEach((problem) => {
            myProblems.addProblem('\\(' + problem.question + '\\)', '\\(' + problem.answer + '\\)');
        });
        console.log(myProblems);
        myProblems.insertLists('putQuestionsHere','putAnswersHere');
    });
    myProblems.insertLists('putQuestionsHere','putAnswersHere');
</script>
