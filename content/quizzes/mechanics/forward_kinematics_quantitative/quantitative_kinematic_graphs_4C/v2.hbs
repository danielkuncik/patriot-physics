            <div class = 'row'>
                <div class = 'col-6-md' id = "M1-acceleration"></div>
                <div class = 'col-6-md'>
                    Initial Position = 0.
                    <br>
                    Initial Velocity = 0 m/s.
                </div>
            </div>
            <div class = 'row'>
                <div class = 'col-6-md' id = 'M1-position'></div>
                <div class = 'col-6-md' id = 'M1-velocity'></div>
